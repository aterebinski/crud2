<div class="container">
  <h1 class="display-3" >Edit Post</h1>
  <%= form_with model: @post do |post| %>
    <div class="form-group">
      <%= post.label :title, "Title" %>
      <%= post.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= post.label :author, "Author" %>
      <%= post.text_field :author, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= post.label :body, "Content" %>
      <%= post.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= post.check_box :published, class: "form-check-control" %>
      <%= post.label :published, "Published?", class: "form-check-label" %>
    </div>
    <%= post.submit "Confirm", class: "btn btn-success" %>
  <% end %>
</div>
