<div class="container">
  <h1 class="display-3">Lista post√≥w</h1>
  <br>
  <a href="<%= new_post_path %>" class="btn btn-lg btn-outline-success">New post</a>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>Published?</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.body %></td>
          <td><%= post.published ? "yes" : "no" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
