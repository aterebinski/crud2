<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th>Published?</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= post.body %></td>
      <td><%= post.published ? "yes" : "no" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
