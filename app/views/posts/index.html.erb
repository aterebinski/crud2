<div class="container my-3">
  <h1 class="display-3">Lista post√≥w</h1>
  <a href="<%= new_post_path %>" class="btn btn-success mb-4">Add new post</a>

  <table class="table table-striped">
    <thead class="thead-dark" >
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>Published?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.body %></td>
          <td><%= post.published ? "yes" : "no" %></td>
          <td>
            <a href="<%= edit_post_path(post.id) %>" class="btn btn-primary btn-sm">Edit</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
