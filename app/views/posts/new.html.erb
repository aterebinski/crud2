<div class="container">

  <div class="row">
    <div class="col-lg-8 offset-lg-2">

      <h1 class="display-4">Posts list</h1>
      <a href="<%= new_post_path %>s</a>" class="btn btn-lg btn-outline-success my-3">Add new post</a>

      <%= form_with model: @post do |post| %>
        <div class="form-group">
          <%= post.label :title, "TItle" %>
          <%= post.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= post.label :author, "Author" %>
          <%= post.text_field :author, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= post.label :body, "Content" %>
          <%= post.text_area :body, class: "form-control" %>
        </div>
        <div class="form-check">
          <%= post.check_box :published, class: "form-check-input" %>
          <%= post.label :published, "Opublikowane?", class: "form-check-label" %>
        </div>
        <%= post.submit "Confirm", class: "btn btn-success btn-lg my-3" %>
      <% end %>
    </div>
  </div>
</div>
